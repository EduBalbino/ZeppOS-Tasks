{
  "exclude": [
    "node_modules",
    "new",
    "**/node_modules/*"
  ],
  "compilerOptions": {
    "target": "es6",
    "module": "ES6",
    "moduleResolution": "Node",
    "lib": ["es2021", "dom"],
    "rootDir": "./",
    "outDir": "./new",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "typeRoots": [
      "./node_modules/zeppos-device-types-v1"
    ],
  },
  "include": [
    "**/*.ts"
  ]
}
